{
  "name": "@verful/adonis-package-boilerplate",
  "description": "A opinionated boilerplate for AdonisJS v6 packages",
  "version": "1.0.0",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "build"
  ],
  "main": "build/index.js",
  "type": "module",
  "author": "Arthur Rezende <arthur-er@protonmail.com>",
  "license": "MIT",
  "keywords": [
    "adonis",
    "adonisjs",
    "adonis-framework"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "scripts": {
    "test": "node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "lint": "eslint \"./**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "coverage": "c8 node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@poppinss/utils": "^6.7.3"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.5.2",
    "@adonisjs/core": "^6.9.0",
    "@japa/assert": "^2.1.0",
    "@japa/runner": "^3.1.4",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^20.12.11",
    "@verful/tooling-configs": "^1.2.0",
    "c8": "^9.1.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "semantic-release": "^23.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.9.0"
  },
  "prettier": "@verful/tooling-configs/prettier",
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
